                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/barisLima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <Button
                android:background="@color/acolorAccent"
                android:layout_alignParentLeft="true"
                android:id="@+id/ya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ya"
                android:onClick="klikTombolMenu"
                android:text="ya"
                android:textStyle="bold" />

            <Button
                android:background="@color/acolorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/ra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ra"
                android:onClick="klikTombolMenu"
                android:text="ra"
                android:textStyle="bold" />

            <Button
                android:background="@color/acolorAccent"
                android:layout_alignParentRight="true"
                android:id="@+id/la"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/la"
                android:onClick="klikTombolMenu"
                android:text="la"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/barisEnam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <Button
                android:background="@color/acolorAccent"
                android:layout_alignParentLeft="true"
                android:id="@+id/wa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/wa"
                android:onClick="klikTombolMenu"
                android:text="wa"
                android:textStyle="bold" />

            <Button
                android:background="@color/acolorAccent"
                android:layout_centerHorizontal="true"
                android:id="@+id/sa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/sa"
                android:onClick="klikTombolMenu"
